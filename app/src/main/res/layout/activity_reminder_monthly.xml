<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add-btn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_shade_blue"
    android:backgroundTint="@color/dark_shade_blue"
    tools:context=".activity_reminder_monthly">

    <TextView
        android:id="@+id/monthly_txt"
        android:layout_width="300dp"
        android:layout_height="39dp"
        android:text="@string/monthly_txt"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="73dp" />

    <CalendarView
        android:id="@+id/calender_view"
        android:layout_width="364dp"
        android:layout_height="319dp"
        android:layout_marginTop="36dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/btn_3"
        tools:layout_editor_absoluteX="23dp" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:text="@string/btn_1"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monthly_txt" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="114dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:text="@string/btn_2"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="160dp" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="40dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:text="@string/btn_3"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="160dp" />

    <TextView
        android:id="@+id/month_txtview"
        android:layout_width="285dp"
        android:layout_height="41dp"
        android:background="@color/white"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="593dp" />

    <TextView
        android:id="@+id/month_txtview2"
        android:layout_width="285dp"
        android:layout_height="41dp"
        android:background="@color/white"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="673dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/add_icon"
        tools:layout_editor_absoluteX="334dp"
        tools:layout_editor_absoluteY="653dp" />

</androidx.constraintlayout.widget.ConstraintLayout>